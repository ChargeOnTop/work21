# WORK21 Backend Configuration

# Основные настройки
APP_NAME=WORK21
APP_VERSION=0.1.0
DEBUG=True

# База данных
# SQLite для разработки:
DATABASE_URL=sqlite+aiosqlite:///./work21.db
# PostgreSQL для production:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/work21

# JWT Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# OpenAI (для AI-агентов, опционально)
OPENAI_API_KEY=

